<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdf9f8" >

    <LinearLayout
        android:id="@+id/linearlayouttop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/abc_white_backgroud"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/txtTestName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="TEST NAME"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtClock"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="CLOCK HERE"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/lineTop"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linearlayouttop"
        android:background="#000000" />

    <ListView
        android:id="@+id/listQuestionsTest"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutButton"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearlayouttop" >
    </ListView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutButton"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lineTop"
        android:layout_toLeftOf="@+id/listQuestionsTest"
        android:background="#FDF9F8" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="QUESTION NUMBER HERE"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp"
                android:typeface="sans" />

            <View
                android:id="@+id/lineQuestionNumber"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txtQuestionNumber"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineQuestionNumber"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:text="QUESTION HERE"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineQuestion"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtQuestion"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <CheckBox
                android:id="@+id/chkOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineQuestion"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/apptheme_btn_check_holo_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_checkbox"
                android:paddingRight="0dp"
                android:text="OPTION 1"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineOption1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chkOption1"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <CheckBox
                android:id="@+id/chkOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOption1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/apptheme_btn_check_holo_light"
                android:paddingLeft="@dimen/padding_checkbox"
                android:paddingRight="0dp"
                android:text="OPTION 2"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineOption2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chkOption2"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <CheckBox
                android:id="@+id/chkOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOption2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/apptheme_btn_check_holo_light"
                android:paddingLeft="@dimen/padding_checkbox"
                android:paddingRight="0dp"
                android:text="OPTION 3"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineOption3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chkOption3"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <CheckBox
                android:id="@+id/chkOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOption3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/apptheme_btn_check_holo_light"
                android:paddingLeft="@dimen/padding_checkbox"
                android:paddingRight="0dp"
                android:text="OPTION 4"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineOption4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chkOption4"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <CheckBox
                android:id="@+id/chkOption5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOption4"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/apptheme_btn_check_holo_light"
                android:paddingLeft="@dimen/padding_checkbox"
                android:paddingRight="0dp"
                android:text="OPTION 5"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineOption5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chkOption5"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <CheckBox
                android:id="@+id/chkOption6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOption5"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/apptheme_btn_check_holo_light"
                android:paddingLeft="@dimen/padding_checkbox"
                android:paddingRight="0dp"
                android:text="OPTION 6"
                android:textSize="22sp" />

            <View
                android:id="@+id/lineOption6"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/chkOption6"
                android:layout_marginBottom="10dp"
                android:background="#000000" />

            <ToggleButton
                android:id="@+id/toggleFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineOption6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/custom_toggle_button"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff="Mark Flag"
                android:textOn="Remove Flag"
                android:textSize="22sp" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:weightSum=".9" >

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="@drawable/test_button_background"
            android:gravity="center"
            android:text="Previous"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="@drawable/test_button_background"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="@drawable/test_button_background"
            android:gravity="center"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayoutButton"
        android:layout_alignRight="@+id/scrollView"
        android:layout_below="@+id/linearlayouttop"
        android:background="#000000" />

</RelativeLayout>